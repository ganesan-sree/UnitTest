<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- Allows to disable dynamic method invocation from the URL -->
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />

	<!-- Whether Struts is in development mode or not -->
	<constant name="struts.devMode" value="false" />

	<!-- The URL extension to use to determine if the request is meant for a 
		Struts action -->
	<constant name="struts.action.extension" value="" />

	<!-- Comma separated list of patterns (java.util.regex.Pattern) to be excluded 
		from Struts2-processing . If the value of the pattern is ws means it will 
		not exclude from Struts2-processing -->
	<constant name="struts.action.excludePattern" value="/ws/.*" />
	
	
	
	<package name="site" extends="struts-default">
  <action name="deletePerson" class="org.unittest.PersonAction"      method="deletePerson">
   <result name="success">/WEB-INF/pages/person.jsp</result>
  </action>
 </package>
 

	
	
	
</struts>